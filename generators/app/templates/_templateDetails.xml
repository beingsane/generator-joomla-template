<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site" method="upgrade">
	<name><%= tpl_name %></name>
	<version><%= tpl_version %></version>
	<creationDate><%= tpl_date %></creationDate>
	<author><%= tpl_author %></author>
	<authorEmail><%= tpl_author_email %></authorEmail>
	<authorUrl><%= tpl_homepage %></authorUrl>
	<copyright>Copyright (C) 2005 - 2015 Open Source Matters, Inc. All rights reserved.</copyright>
	<license><%= tpl_license %></license>
	<description>TPL_<%= tpl_name_upper %>_XML_DESCRIPTION</description>
	<files><%= tpl_files %></files>
	<positions>
		<position>top</position>
		<position>left</position>
		<position>right</position>
		<position>bottom</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_<%= tpl_name %>.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_<%= tpl_name %>.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="background_color" class="" type="color" default="#333" label="TPL_<%= tpl_name_upper %>_BACKGROUND_COLOR_LABEL" description="TPL_<%= tpl_name_upper %>_BACKGROUND_COLOR_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>